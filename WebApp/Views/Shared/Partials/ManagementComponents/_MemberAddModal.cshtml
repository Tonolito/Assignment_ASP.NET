
@model AddMemberViewModel
<div class="modal-container" id="addMemberModal">
    <div class="modal-card">
        <div class="top-card">
            <h3>Add Member</h3>
            <button class="exit-btn" data-close="true">
                <i class="fa-solid fa-xmark fa-2xl"></i>
            </button>
        </div>
        
        <form novalidate method="post" asp-action="Add" asp-controller="Members">
            <div class="image-previewer circle">
                <img src="" class="image-preview" />
                <input asp-for="MemberImage" accept="image/*" class="hide" />
            </div>
            <div class="fullname-flex">
                <div class="labelgroup-modal">
                    <label asp-for="FirstName"></label>
                    <div class="field-group">
                        <input asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="labelgroup-modal">
                    <label asp-for="LastName"></label>
                    <div class="field-group">
                        <input asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
            <div class="labelgroup-modal">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="labelgroup-modal">
                    <label asp-for="Phone"></label>
                    <div class="field-group">
                        <input asp-for="Phone" />
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>

            <div class="labelgroup-modal">
                <label asp-for="JobTitle"></label>
                <div class="field-group">
                    <input asp-for="JobTitle" />
                    <span asp-validation-for="JobTitle"></span>
                </div>
            </div>
            <div class="labelgroup-modal">
                <label asp-for="Address"></label>
                <div class="field-group">
                    <input asp-for="Address" />
                    <span asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="labelgroup-modal">
                <label asp-for="DateOfBirth"></label>
                @* ??????????????????????? *@
                <div class="dob-flex">
                    <select name="" id="">
                        <option value="" disabled selected>Day</option>
                    </select>
                    <select name="" id="">
                        <option value="" disabled selected>Month</option>
                    </select>
                    <select name="" id="">
                        <option value="" disabled selected>Year</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn blue-btn">Add Member</button>
        </form>
    </div>
</div>