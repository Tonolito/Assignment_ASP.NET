<div class="modal-container" id="editMemberModal">
    <div class="modal-card">
        <div class="top-card">
            <h3>Edit Member</h3>
            <button class="exit-btn" data-close="true">
                <i class="fa-solid fa-xmark fa-2xl"></i>
            </button>
        </div>
        <div class="upload-picture-container">
            <input class="img-upload" type="file" hidden id="upload-img" />
            <label for="img-upload">
                <img src="/css/images/upload.svg" alt="" />
            </label>
        </div>
        <form>
            <div class="fullname-flex">
                <div class="labelgroup-modal">
                    <label for="">First Name</label>
                    <input type="text" placeholder="First Name" />
                </div>
                <div class="labelgroup-modal">
                    <label for="">Last Name</label>
                    <input type="text" placeholder="Last Name" />
                </div>
            </div>

            <div class="labelgroup-modal">
                <label for="">Email</label>
                <input type="text" placeholder="Email" />
            </div>

            <div class="labelgroup-modal">
                <label for="">Phonenumber</label>
                <input type="text" placeholder="Phonenumber" />
            </div>

            <div class="labelgroup-modal">
                <label for="">Job Title</label>
                <input type="text" placeholder="Job Title" />
            </div>
            <div class="labelgroup-modal">
                <label for="">Address</label>
                <input type="text" placeholder="Address" />
            </div>
            <div class="labelgroup-modal">
                <label for="">Date of birh</label>
                <div class="dob-flex">
                    <select name="" id="">
                        <option value="" disabled selected>Day</option>
                    </select>
                    <select name="" id="">
                        <option value="" disabled selected>Month</option>
                    </select>
                    <select name="" id="">
                        <option value="" disabled selected>Year</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn blue-btn">Save</button>
        </form>
    </div>
</div>